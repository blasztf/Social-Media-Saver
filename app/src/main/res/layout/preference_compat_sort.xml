<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@android:id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

<!--    <TextView-->
<!--        android:id="@android:id/summary"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textAppearance="?android:attr/textAppearanceSmall" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="1">

        <RadioGroup
            android:id="@+id/sortByGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <RadioButton
                android:id="@+id/sortByName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Name" />

            <RadioButton
                android:id="@+id/sortByDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date" />

            <RadioButton
                android:id="@+id/sortBySize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size" />

            <RadioButton
                android:id="@+id/sortByType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/sortOrderGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <RadioButton
                android:id="@+id/sortOrderAsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Ascending" />

            <RadioButton
                android:id="@+id/sortOrderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descending" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>